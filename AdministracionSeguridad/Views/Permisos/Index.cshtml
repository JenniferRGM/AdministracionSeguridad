@model IEnumerable<AdministracionSeguridad.Controllers.Permisos>

@{
    ViewBag.Title = "Creación de permisos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Página para crear permisos</h2>

<p>
    @Html.ActionLink("Crear nuevo permiso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombrePermiso)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombrePermiso)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PermisoID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.PermisoID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.PermisoID })
        </td>
    </tr>
}

</table>
