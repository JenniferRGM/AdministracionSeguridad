<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Administración de Seguridad</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-nav {
            flex-wrap: wrap;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            @Html.ActionLink("Administrador de Seguridad", "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">

                    <li class="nav-item">@Html.ActionLink("Cantones", "Index", "Cantones", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Catálogo de Permisos", "Index", "CatalogoPermisos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Categorías", "Index", "Categorias", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Configuraciones", "Index", "Configuraciones", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Datos", "Index", "Datos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Distritos", "Index", "Distritos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Crear Logins", "Index", "Logins", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Acceso de Menús", "Index", "Menus", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Acceso a Permisos", "Index", "Permisos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Provincias", "Index", "Provincias", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Acceso a Reportes", "Index", "Reportes", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Acceso a Roles", "Index", "Roles", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Acceso a Permisos en Rol", "Index", "Roles_Permisos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Teléfonos", "Index", "Telefonos", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Ubicaciones", "Index", "Ubicaciones", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Perfiles", "Index", "Usuarios", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Historial", "Index", "Historial", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Administración de Seguridad</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @if (IsSectionDefined("scripts"))
    {
        @RenderSection("scripts")
    }
</body>
</html>
