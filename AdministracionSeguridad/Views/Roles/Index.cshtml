@model IEnumerable<AdministracionSeguridad.Controllers.Roles>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Acceso a roles</h2>

<p>
    @Html.ActionLink("Crear rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreRol)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreRol)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.RolID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.RolID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.RolID })
        </td>
    </tr>
}

</table>
